<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cemrc.correlator.controllers.FindHolesController">
   <children>
      <SplitPane dividerPositions="0.5" orientation="VERTICAL">
        <items>
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Canvas fx:id="previewCanvas" height="400.0" width="400.0" />
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
            <VBox>
               <children>
                  <HBox fx:id="chartBox" prefHeight="100.0" prefWidth="200.0" />
                  <HBox alignment="TOP_RIGHT">
                     <children>
                        <TextField fx:id="low" prefWidth="64.0" text="0">
                           <HBox.margin>
                              <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
                           </HBox.margin>
                        </TextField>
                        <TextField fx:id="high" prefWidth="64.0" text="256">
                           <HBox.margin>
                              <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
                           </HBox.margin>
                        </TextField>
                        <Label text="Binarization Level:">
                           <HBox.margin>
                              <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                        <Slider fx:id="binarizationSlider" max="255.0">
                           <HBox.margin>
                              <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
                           </HBox.margin>
                        </Slider>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <VBox alignment="TOP_CENTER">
                           <children>
                              <Label text="Target map :" wrapText="true">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </Label>
                              <ComboBox fx:id="targetMapCombo" onAction="#updateTargetMap" prefWidth="150.0">
                                 <VBox.margin>
                                    <Insets bottom="10.0" top="5.0" />
                                 </VBox.margin>
                              </ComboBox>
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets left="25.0" right="25.0" />
                           </HBox.margin>
                        </VBox>
                        <VBox alignment="TOP_CENTER">
                           <children>
                              <Label text="Edge Detection" wrapText="true">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </Label>
                              <ComboBox fx:id="edgeAlgorithmCombo" onAction="#updateEdgeDetection" prefWidth="150.0">
                                 <VBox.margin>
                                    <Insets bottom="10.0" top="5.0" />
                                 </VBox.margin>
                              </ComboBox>
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <ToggleButton fx:id="bwImageToggle" mnemonicParsing="false" selected="true" text="Show BW Image Layer">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </ToggleButton>
                        <ToggleButton fx:id="edgeImageToggle" mnemonicParsing="false" selected="true" text="Show Edge Image Layer">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </ToggleButton>
                        <ToggleButton fx:id="holesToggle" layoutX="161.0" layoutY="20.0" mnemonicParsing="false" selected="true" text="Show Found Holes">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </ToggleButton>
                     </children>
                  </HBox>
                  <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="TOP_RIGHT">
                           <children>
                              <HBox>
                                 <children>
                                    <Button fx:id="holesButton" mnemonicParsing="false" onAction="#doCircleHoughTransform" prefWidth="100.0" text="Find Holes!">
                                       <HBox.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </HBox.margin>
                                    </Button>
                                    <Button fx:id="resetHoles" mnemonicParsing="false" onAction="#doResetHoles" prefWidth="60.0" text="Reset">
                                       <HBox.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </HBox.margin>
                                    </Button>
                                    <ProgressBar fx:id="findProgressBar" prefWidth="150.0" progress="0.0">
                                       <padding>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="15.0" />
                                       </padding>
                                       <HBox.margin>
                                          <Insets left="10.0" right="10.0" />
                                       </HBox.margin>
                                    </ProgressBar>
                                    <Button fx:id="acceptButton" layoutX="35.0" layoutY="35.0" mnemonicParsing="false" onAction="#doAccept" text="Accept">
                                       <HBox.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </HBox.margin>
                                    </Button>
                                    <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#doCancel" text="Cancel">
                                       <HBox.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
        </items>
      </SplitPane>
   </children>
</VBox>
