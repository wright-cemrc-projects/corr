<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cemrc.correlator.controllers.FindHolesController">
   <children>
      <HBox>
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
                  <ImageView fx:id="imageView" fitHeight="400.0" fitWidth="768.0" pickOnBounds="true" preserveRatio="true" />
                  <Label text="Target map :" wrapText="true">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </Label>
                  <ComboBox fx:id="targetMapCombo" onAction="#updateTargetMap" prefWidth="150.0">
                     <VBox.margin>
                        <Insets bottom="25.0" top="5.0" />
                     </VBox.margin>
                  </ComboBox>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="TOP_RIGHT">
         <children>
            <Label text="Binarization Level:">
               <HBox.margin>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </HBox.margin>
            </Label>
            <Slider fx:id="binarizationSlider" max="255.0">
               <HBox.margin>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </HBox.margin>
            </Slider>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#doCancel" text="Cancel">
               <HBox.margin>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="holesButton" mnemonicParsing="false" onAction="#doCircleHoughTransform" text="Find Holes!">
               <HBox.margin>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
